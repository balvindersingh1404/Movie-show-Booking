<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolBarStyle"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.example.balvinder.bookYourShow.util.MyTextView
                    android:layout_width="220dp"
                android:paddingTop="10dp"
                android:id="@+id/movies_for_u"
                android:textStyle="bold"
                app:typeface="cafeta.otf"
                android:layout_height="wrap_content"
                android:text="MOVIES FOR YOU"
                android:textSize="24dp"
                android:paddingLeft="40dp"
                android:textColor="#000000" />
                <com.example.balvinder.bookYourShow.util.MyTextView
                    android:layout_width="170dp"
                android:layout_below="@id/movies_for_u"
                app:typeface="cafeta.otf"
                    android:id="@+id/location"
                android:layout_height="wrap_content"
                android:text="Delhi-NCR"
                android:textSize="12dp"
                android:paddingLeft="92dp"
                android:textColor="#AFAFAF"
                android:paddingBottom="2dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@id/movies_for_u"
                android:src="@drawable/search"
                android:id="@+id/searchloc"
              />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location"
                android:id="@+id/locate"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@id/searchloc"
                android:layout_marginLeft="15dp"/>
            </RelativeLayout>
            </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_sidebar" />

</android.support.design.widget.CoordinatorLayout>

