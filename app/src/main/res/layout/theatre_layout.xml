<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_focus"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fav_theatre" />

            <com.example.balvinder.bookYourShow.util.MyTextView

                android:layout_toRightOf="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title name"
                android:paddingTop="10dp"
                app:typeface="cafeta.otf"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="17dp"
                android:id="@+id/name"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:id="@+id/image1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/distance" />

            <com.example.balvinder.bookYourShow.util.MyTextView

                android:layout_below="@id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10km"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                app:typeface="cafeta.otf"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="13dp"
                android:id="@+id/distance"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/distance"
                android:layout_marginBottom="10dp">

                <com.example.balvinder.bookYourShow.util.MyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEFIKRE"
                    android:background="@drawable/borderyellow"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:typeface="cafeta.otf"
                    android:layout_marginRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="13dp"
                    android:id="@+id/theatre1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
                <com.example.balvinder.bookYourShow.util.MyTextView

                    android:layout_below="@id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KAHANI 2"
                    android:paddingTop="10dp"
                    android:background="@drawable/borderyellow"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:typeface="cafeta.otf"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/theatre2"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
                <com.example.balvinder.bookYourShow.util.MyTextView

                    android:layout_below="@id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEAR ZINDAGI"
                    android:paddingTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:typeface="cafeta.otf"
                    android:background="@drawable/borderyellow"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="13dp"
                    android:id="@+id/theatre3"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>