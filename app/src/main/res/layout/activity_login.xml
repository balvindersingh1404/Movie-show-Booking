<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <com.example.balvinder.bookYourShow.util.MyTextView
        android:text="ALREADY A MEMBER? SIGN IN "
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailmsg"
        android:textColor="#000000"
        android:textSize="23dp"
        android:textStyle="bold"
        android:background="#FFCB05"
        android:padding="15dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textAlignment="center"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:typeface="cafeta.otf"
        />

    <com.example.balvinder.bookYourShow.util.MyTextView
        android:text="SKIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFCB05"
        android:textStyle="bold"
        android:textSize="22.5dp"
        android:id="@+id/textView9"
        android:layout_marginTop="14dp"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView2"
        app:typeface="cafeta.otf"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_icon"
        android:id="@+id/profilePic1"

        android:layout_marginLeft="130dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView9"
        android:layout_alignEnd="@+id/mobilemsg" />

    <com.example.balvinder.bookYourShow.util.MyTextView
        android:text="SIGN IN WITH"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/profilePic1"
        android:layout_centerHorizontal="true"
        app:typeface="cafeta.otf"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fb"
        android:id="@+id/imageView2"
        android:layout_gravity="center"
        android:layout_weight="0.30"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/google"
        android:layout_marginTop="15dp"
        android:id="@+id/imageView3"
        android:layout_gravity="center"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <TextView
        android:text="@string/registerWithEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />


</RelativeLayout>