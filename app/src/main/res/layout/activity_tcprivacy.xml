<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.balvinder.bookYourShow.activity.TCPrivacyActivity"
    android:background="#ffffff">


    <com.example.balvinder.bookYourShow.util.MyTextView
        android:text="T&amp;C | PRIVACY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView14"
        tools:text="T &amp; C | PRIVACY"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:typeface="cafeta.otf"

        />

    <View
        android:id="@+id/hr"
        android:layout_width="fill_parent"
        android:layout_height="1dp"

        android:background="#c0c0c0"
        android:layout_below="@+id/back"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <View
        android:id="@+id/hr2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"

        android:background="#c0c0c0"
        android:layout_below="@+id/privacy"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <View
        android:id="@+id/hr1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"

        android:background="#c0c0c0"
        android:layout_below="@+id/hr2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="Terms and Conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/termsAndConditions"
        tools:text="Terms and Conditions"
        android:textColor="#303030"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_below="@+id/hr1"
        android:layout_alignStart="@+id/termsOfUse" />

    <View
        android:id="@+id/hr3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"

        android:background="#c0c0c0"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/termsAndConditionsInfo"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/chevron"
        android:id="@+id/privacyInfo"
        android:layout_above="@+id/hr2"
        android:layout_alignStart="@+id/termsOfUseInfo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/chevron"
        android:id="@+id/termsAndConditionsInfo"
        android:layout_alignBottom="@+id/termsAndConditions"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/chevron"
        android:id="@+id/termsOfUseInfo"
        android:layout_alignBottom="@+id/termsOfUse"
        android:layout_alignStart="@+id/termsAndConditionsInfo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back"
        android:id="@+id/back"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="Privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/privacy"
        tools:text="Privacy"
        android:textColor="#303030"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/hr"
        android:layout_alignStart="@+id/back" />

    <TextView
        android:text="Term Of Use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/termsOfUse"
        tools:text="Term Of Use"
        android:textColor="#303030"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_below="@+id/hr2"
        android:layout_alignStart="@+id/privacy" />

    <TextView
        android:text="Version 1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="Version 1.0"
        android:layout_below="@+id/hr3"
        android:layout_centerHorizontal="true"
        android:textSize="10dp"/>
</RelativeLayout>
